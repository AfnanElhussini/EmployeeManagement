@model IEnumerable<EmployeeManagement.Models.EmployeeDepartment>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h2 class="text-center">Employee Department</h2>

    <div class="row justify-content-center mb-3">
        <div class="col-md-6 col-sm-12 mb-3">
            <a asp-action="Create" class="btn btn-success btn-block">Create New</a>
        </div>
        <div class="col-md-6 col-sm-12 mb-3">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="Employee">Employee</label>
                    </div>
                    @Html.DropDownList("Employee", (SelectList)ViewBag.EmpList, "Select Emp", new { @class = "form-control" })

                    <div class="input-group-prepend">
                        <label class="input-group-text" for="Department">Department</label>
                    </div>
                    @Html.DropDownList("Department", (SelectList)ViewBag.DeptList, "Select Dep", new { @class = "form-control" })

                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>Employee</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Employee.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department.Name)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


